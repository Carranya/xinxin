{% extends 'base.html.twig' %}

{% block body %}

<div class='bg-red-300'>
    <h1 class='text-center text-6xl font-bold text-yellow-300 underline p-5'>Speisekarte</h1>
    {% for menu in menues %}
        <div class='flex justify-center'>
            <div class='bg-red-400 w-1/2 m-5 p-5 shadow-xl rounded-xl text-yellow-300 text-center'>
                <img src='/img/menu/{{menu.img}}.jpg' class='float-left w-80 m-3 rounded-xl'>
                <h2 class='text-2xl underline'>{{menu.name}}</h2><br>
                <span>{{menu.descripe}}</span><br><br>
                <span class='font-bold'>CHF {{menu.price}}</span>
            </div>
        </div>
    {% endfor %}
    <br>
<div class='text-center p-5'>
    <a href='#' class='text-2xl text-yellow-300 underline font-bold'>Download Speisekarte (PDF)</a>
</div>
</div>

{% endblock %}
